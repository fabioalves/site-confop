<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Administrativo</title>
    <link href="@Url.Content("~/Content/Site-admin.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/menu-styles.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="topo">
                <div id="imgtopo"></div>
            </div>

        </header>

        
        <section id="main">
        @if (confop.Utility.SimpleSessionPersister.Id != null)
        {
        <section id="left-block">
        
        <div class='vertical-menu'>
            @RenderPage("_LeftBlock.cshtml")
        </div>
        </section>
        
            <div class="content-box">
                @RenderBody()
            </div>

        }
        else
        {
            <div class="login-box">
                @RenderBody()
            </div>
        }
        
        </section>
        
        <footer>
            <section id="footer">
                @RenderPage("_Footer.cshtml")
            </section>
        </footer>
    </div>
</body>
</html>
