@model IEnumerable<confop.Models.Contato>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Mensagens</h2>

<table>
    <tr>
        <th>
            Remetente
        </th>
        <th>
            E-mail
        </th>
        <th>
            Assunto
        </th>
        <th>
            Data de Envio
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Remetente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Assunto)
        </td>
        <td>
        @if (item.DataEnvio.HasValue)
        {
            <span>@item.DataEnvio.Value.ToShortDateString()</span>
        }
        else
        {
            <span>Sem data registrada</span>
        }
        </td>
        
        <td>
            @Html.ActionLink("Visualizar", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
