@model confop.Models.Secao

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Editar Seção</h2>

<p>
    @Html.ActionLink("Voltar para a Lista", "Index")
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/tinymce/jscripts/tiny_mce/tiny_mce.js")" type="text/javascript"></script>
<script type="text/javascript">
    tinyMCE.init({
        theme: "simple",
        mode: "textareas"
    });
</script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Seção de Conteúdo</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Texto)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Texto, new { @cols = "70", @rows = "16" })
            @Html.ValidationMessageFor(model => model.Texto)
        </div>
        @Html.HiddenFor(model => Model.SiteId)
        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

