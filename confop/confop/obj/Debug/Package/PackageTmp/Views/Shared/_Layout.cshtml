            </div>
        </header>

        
        <section id="main">
        <section id="right-block">
        <div class='vertical-menu'>
            @RenderPage("_RightBlock.cshtml")
        </div>
        </section>
            <div class="content-box">
                @RenderBody()
            </div>        
        </section>
        
        <footer>
            <section id="footer">
                @RenderPage("_Footer.cshtml")
            </section>
        </footer>
    </div>
</body>
</html>
